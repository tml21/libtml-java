<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/scrollView"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.example.mk.tmlexample.InputActivity"
        android:id="@+id/relative_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tmlcore_ip"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editIp"
        android:layout_below="@+id/tmlcore_ip"
        android:layout_alignLeft="@+id/tmlcore_ip"
        android:layout_alignStart="@+id/tmlcore_ip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tmlcore_port"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/editIp"
        android:layout_alignLeft="@+id/editIp"
        android:layout_alignStart="@+id/editIp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editPort"
        android:layout_below="@+id/tmlcore_port"
        android:layout_alignLeft="@+id/tmlcore_port"
        android:layout_alignStart="@+id/tmlcore_port" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tmlcore_profileid"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/editPort"
        android:layout_alignLeft="@+id/editPort"
        android:layout_alignStart="@+id/editPort" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/editProfileId"
        android:layout_below="@+id/tmlcore_profileid"
        android:layout_alignLeft="@+id/tmlcore_profileid"
        android:layout_alignStart="@+id/tmlcore_profileid"
        android:layout_alignRight="@+id/editPort"
        android:layout_alignEnd="@+id/editPort"
        android:layout_marginEnd="15dp"
        android:imeOptions="actionDone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/button2"
        android:layout_marginTop="50dp"
        android:onClick="saveSettings"
        android:layout_below="@+id/editProfileId"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>